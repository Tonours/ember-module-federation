{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "description": "REST API with JSON:API format, JWT auth and CRUD articles",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "node scripts/setup-db.cjs && npx tsc --skipLibCheck",
    "start": "node dist/index.js",
    "db:setup": "node scripts/setup-db.cjs",
    "prisma:generate": "node scripts/setup-db.cjs && npx prisma generate",
    "prisma:push": "node scripts/setup-db.cjs && npx prisma db push",
    "prisma:studio": "npx prisma studio",
    "prisma:seed": "tsx prisma/seed.ts"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.8.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.0",
    "prisma": "^5.8.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
