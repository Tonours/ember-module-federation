# Development environment variables
# Copy this file to .env for local development: cp .env.example .env

# Database
# SQLite for local development
DATABASE_URL="file:./dev.db"

# CORS
# Use '*' for development (allows all origins)
# In production, set to specific origins: https://yourdomain.com
CORS_ORIGIN=*

# JWT
# Change this secret in production!
JWT_SECRET=dev-secret-change-in-production

# Server
# In dev: Node.js listens directly on 3333 (no nginx)
# In prod: Node.js on 4000, nginx on 3333 proxies to 4000
PORT=3333
